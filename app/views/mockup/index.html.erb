<div class="tags-container filter clearfix">
  <label>标签:</label>
  <ul class="tags">
    <li><a href="#">设计</a></li>
    <li><a href="#">生活</a></li>
    <li><a href="#">Flat</a></li>
    <li><a href="#">复古</a></li>
    <li><a href="#">交互</a></li>
  </ul>
</div>
<div id="container">
  <% 40.times do %>
    <% tags = rand_tags %>
    <div class="item <%= rand_size %> <%= tags.join(' ') %>" style="<%= rand_style %>">
      <a href="#">
       <p class="wrapper">
        <span class="title">疯狂的设计</span>
        <span class="desc">展示iPhone / iPad应用程序图标, 移动应用程序</span>
       </p>
      </a>
      <ul class="tags">
        <% tags.each do |tag| %>
        <li>
          <a href="#"><%= tag %></a>
        </li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
