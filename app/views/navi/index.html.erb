<div class="tags-container filter clearfix" style="margin: 0 auto">
  <ul class="tags">
    <!--<li>类型:</li>-->
    <% @top_words.each do |category| %>
      <li><a href="#"><%= category.name %></a></li>
    <% end %>
  </ul>
</div>
<br />
<div class="tags-container filter clearfix">
  <ul class="tags">
    <li>标签:</li>
    <% @tags.each do |tag| %>
      <li><a href="#"><%= tag.name %></a></li>
    <% end %>
  </ul>
</div>
<div id="container">
  <% @links.each do |link| %>
    <% tags = rand_tags %>
    <div class="item <%= link.tags.map(&:name).join(' ') %> <%= link.category.try(:name) %>" style="<%= rand_style %>">
      <a href="<%= link.url %>" target="_blank">
       <p class="wrapper">
        <span class="title"><%= link.title %></span>
        <span class="desc"><%= link.description %></span>
       </p>
      </a>
      <div class="extra">
        <a class="type">书籍</a>
      </div>
    </div>
  <% end %>
</div>
