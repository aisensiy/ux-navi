<%= simple_form_for @word, html: { class: 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :rank, collection: 0..5, as: :radio_buttons %>
  <%= f.association :parents, as: :check_boxes, label_method: lambda { |item| "#{link_to(item.name, edit_word_path(item))}".html_safe} %>
  <%= f.association :children, as: :check_boxes,label_method: lambda { |item| "#{link_to(item.name, edit_word_path(item))}".html_safe} %>
  <%= f.button :submit %>
<% end %>
