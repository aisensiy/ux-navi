<%= simple_form_for(@item, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.input :name, input_html: { class: 'span5' } %>
  <%= f.input :url, as: :string, input_html: { class: 'span5' } %>
  <%= f.input :description, input_html: { rows: 5, class: 'span5' } %>
  <%= f.input :rank, collection: 0..5, as: :radio_buttons %>
  <%= f.association :words, as: :check_boxes, include_blank: false, input_html: { class: '' } %>
  <%= f.button :submit %>
<% end %>
